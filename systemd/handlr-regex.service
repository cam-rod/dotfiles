[Unit]
Description=Check cargo-whatfeatures weekly
After=network.target
Wants=local_updchk@cargo-whatfeatures-chk.timer
StartLimitBurst=5

[Service]
Type=simple
ExecStart=/home/<USER>/.local/share/cargo/bin/cargo install handlr-regex
# Configures under what conditions the unit will be restarted.
Restart=on-failure
RestartSec=30
