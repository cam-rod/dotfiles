[Unit]
Description=Check handlr-regex weekly
After=network.target
Wants=local_updchk@handler-regex.timer
StartLimitBurst=5

[Service]
Type=simple
ExecStart=/home/<USER>/.local/share/cargo/bin/cargo install handlr-regex
# Configures under what conditions the unit will be restarted.
Restart=on-failure
RestartSec=30
